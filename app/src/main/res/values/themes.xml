<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Shortapps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- OS 26 Palette: Dark Glass -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- iOS Blue -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item> <!-- iOS Purple -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">#000000</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
