<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Edit Window"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="@drawable/ic_settings"/> <!-- reusing existing icon as back placeholder or logic -->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- General Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textColor="#0A84FF"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Window Name"
                android:textColorHint="#666666"
                app:boxStrokeColor="#0A84FF"
                app:hintTextColor="#0A84FF"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show in Notification Center"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvColumns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Columns: 4"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>
            <SeekBar
                android:id="@+id/sbColumns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="8"
                android:min="1"
                android:progress="4"
                android:progressTint="#0A84FF"
                android:thumbTint="#0A84FF"
                android:layout_marginTop="8dp"/>

            <!-- Trigger Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floating Trigger"
                android:textColor="#0A84FF"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Floating Button"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:id="@+id/layoutTriggerSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTriggerSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: 60dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp"/>
                <SeekBar
                    android:id="@+id/sbTriggerSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:min="30"
                    android:progress="60"
                    android:progressTint="#BF5AF2"
                    android:thumbTint="#BF5AF2"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvTriggerRadius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corner Radius: 30dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="12dp"/>
                <SeekBar
                    android:id="@+id/sbTriggerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="30"
                    android:progressTint="#BF5AF2"
                    android:thumbTint="#BF5AF2"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Items Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textColor="#0A84FF"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <Button
                    android:id="@+id/btnAddApp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ App"
                    android:textColor="#FFFFFF"
                    app:strokeColor="#333333"
                    android:layout_marginEnd="8dp"/>
                <Button
                    android:id="@+id/btnAddTask"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Tasker"
                    android:textColor="#FFFFFF"
                    app:strokeColor="#333333"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1C1C1E"
                android:nestedScrollingEnabled="false"
                android:minHeight="100dp"
                android:padding="8dp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drag to reorder, swipe to delete"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:icon="@android:drawable/ic_menu_save"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0A84FF"
        app:iconTint="#FFFFFF"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>