<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_background"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Widget Studio"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drag the items below individually to position them."
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

            <!-- Preview Section (Interactive) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="32dp">

                <!-- The "Widget" Preview Container -->
                <FrameLayout
                    android:id="@+id/previewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_16dp"
                    android:clipToOutline="true">
                    
                    <!-- Preview Image BG -->
                    <ImageView
                        android:id="@+id/previewBgImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>
                        
                    <!-- Preview Color BG -->
                    <View
                        android:id="@+id/previewBgColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#212121"/>

                    <!-- Draggable Elements -->
                    <!-- Positioned in center initially using layout_gravity="center" -->
                    
                    <TextView
                        android:id="@+id/previewAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="#22000000"/>

                    <Button
                        android:id="@+id/previewPlus"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:stateListAnimator="@null"/>
                        
                    <Button
                        android:id="@+id/previewMinus"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:text="-"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:stateListAnimator="@null"/>
                        
                </FrameLayout>
            </FrameLayout>

            <!-- Background Source Toggle -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleBgType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@+id/btnTypeColor">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTypeColor"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Solid Color"
                    android:textColor="@drawable/selector_chip_text_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTypeImage"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Custom Image"
                    android:textColor="@drawable/selector_chip_text_color"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- SECTION: COLOR SETTINGS -->
            <LinearLayout
                android:id="@+id/sectionColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:layout_marginBottom="16dp">

                    <RadioGroup
                        android:id="@+id/rgStyles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <RadioButton
                            android:id="@+id/style1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/selector_chip_background"
                            android:button="@null"
                            android:paddingHorizontal="20dp"
                            android:text="Dark"
                            android:textColor="@drawable/selector_chip_text_color"
                            android:layout_marginEnd="8dp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/style2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/selector_chip_background"
                            android:button="@null"
                            android:paddingHorizontal="20dp"
                            android:text="Light"
                            android:textColor="@drawable/selector_chip_text_color"
                            android:layout_marginEnd="8dp"/>

                        <RadioButton
                            android:id="@+id/style3"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/selector_chip_background"
                            android:button="@null"
                            android:paddingHorizontal="20dp"
                            android:text="Accent"
                            android:textColor="@drawable/selector_chip_text_color"
                            android:layout_marginEnd="8dp"/>
                            
                        <RadioButton
                            android:id="@+id/style5"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/selector_chip_background"
                            android:button="@null"
                            android:paddingHorizontal="20dp"
                            android:text="Deep"
                            android:textColor="@drawable/selector_chip_text_color"
                            android:layout_marginEnd="8dp"/>
                    </RadioGroup>
                </HorizontalScrollView>

                <!-- Transparency Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alpha"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"/>
                    
                    <SeekBar
                        android:id="@+id/seekBarTransparency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:progress="255"
                        android:progressTint="@color/md_theme_dark_primary"
                        android:thumbTint="@color/md_theme_dark_primary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SECTION: IMAGE SETTINGS -->
            <LinearLayout
                android:id="@+id/sectionImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectImage"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Select Photo"
                        android:textColor="@color/md_theme_dark_secondary"
                        app:strokeColor="@color/md_theme_dark_secondary"
                        android:layout_marginEnd="8dp"/>
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearImage"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Reset"
                        android:textColor="@color/md_theme_dark_error"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Common Settings -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corner Radius"
                    android:textColor="#E0E0E0"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                
                <SeekBar
                    android:id="@+id/seekBarRadius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="64"
                    android:progress="16"
                    android:progressTint="@color/md_theme_dark_primary"
                    android:thumbTint="@color/md_theme_dark_primary"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:background="@color/md_theme_dark_background">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveWidget"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Apply Changes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/md_theme_dark_primaryContainer"
            android:textColor="@color/md_theme_dark_onPrimaryContainer"
            app:cornerRadius="28dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>