<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:clipToOutline="true"
    android:background="@drawable/rounded_16dp">

    <!-- 1. IMAGE Background -->
    <ImageView
        android:id="@+id/widget_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@null" />

    <!-- 2. COLOR Background -->
    <!-- CRITICAL FIX: RemoteViews cannot use <View>, must use <ImageView> even for solid colors -->
    <ImageView
        android:id="@+id/widget_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        android:visibility="visible"
        android:src="@null"/>

    <!-- 3. Independent Layers for Positioning -->
    <!-- Each element is wrapped in a full-size FrameLayout. 
         We adjust the layout padding of these wrappers in Java to simulate X/Y positioning. -->

    <!-- Layer: Minus Button -->
    <FrameLayout
        android:id="@+id/wrapper_minus"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <Button
            android:id="@+id/widget_btn_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="-"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <!-- Layer: Plus Button -->
    <FrameLayout
        android:id="@+id/wrapper_plus"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <Button
            android:id="@+id/widget_btn_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="+"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent" />
    </FrameLayout>

    <!-- Layer: Amount Text -->
    <FrameLayout
        android:id="@+id/wrapper_amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/widget_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </FrameLayout>

    <!-- Clickable overlay to open app (if needed) -->
    <LinearLayout 
         android:id="@+id/widget_click_overlay"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:visibility="gone"/>
         
    <!-- Config Button (Fixed Top Right) -->
    <ImageButton
        android:id="@+id/widget_btn_config"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_settings"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:alpha="0.4"
        android:contentDescription="Settings"/>

</FrameLayout>